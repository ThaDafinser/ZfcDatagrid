            //on inti we load the first page, but locale type do not know about json data
            grid_<?php echo $this->gridId; ?>_loadComplete(data);
        }
        <?php endif; ?>
    },
    
    beforeSelectRow: function (rowId, e) {
        return true;
    }
});
