{
    "name":        "thadafinser/zfc-datagrid",
    "description": "Zend Framework 2 Module that provides a datagrid for different datasources and output formats",
    "type":        "library",
    "license":     "MIT",
    "keywords": [
        "zfc-datagrid",
        "ZfcDatagrid",
        "Datagrid",
        "Datatable",
        "module",
        "zf2",
        "Zend Framework",
        "pdf",
        "excel",
        "jqgrid",
        "bootstrap",
        "Doctrine"
    ],
    
    "authors": [{
        "name": "Martin Keckeis",
        "email": "martin.keckeis1@gmail.com"
    }],

    "require": {
        "php": "~5.6|~7.0",
        
        "zendframework/zend-mvc": "^3.0",
        "zendframework/zend-session": "^2.5",
        "zendframework/zend-view": "^2.5",
        "zendframework/zend-http": "^2.5",
        "zendframework/zend-paginator": "^2.5",
        "zendframework/zend-cache": "^2.5",
        "zendframework/zend-servicemanager": "^3.0"
    },
    
    "require-dev": {
        "phpunit/phpunit": "^5.7.14 || ^6.0.7",
        "friendsofphp/php-cs-fixer": "^1.11",
        "doctrine/doctrine-orm-module": "^1.1.1",
        
        "zendframework/zend-console": "^2.5",
        "zendframework/zend-db": "^2.5",
        "zendframework/zend-i18n": "^2.5",
        "zendframework/zend-text": "^2.5",
        "zendframework/zend-json": "^2.5"
    },
    
    "suggest" : {
        "ext-intl": "*",
        "doctrine/doctrine-orm-module": "for doctrine support",
        
        "phpoffice/phpexcel": "^1.8",
        "tecnickcom/tcpdf": "^6.2",

        "zendframework/zend-text": "~2.5",
        "zendframework/zend-json": "to support date ranges"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.4-dev",
            "dev-develop": "2.0-dev"
        }
    },

    "autoload": {
        "psr-4": {
            "ZfcDatagrid\\": "src/ZfcDatagrid"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "ZfcDatagridTest\\": "tests/ZfcDatagridTest"
        }
    }
}
