{
    "name":        "thadafinser/zfc-datagrid",
    "description": "Zend Framework 2 Module that provides a datagrid for different datasources and output formats",
    "type":        "library",
    "license":     "WTFPL",
    "keywords": [
        "ZfcDatagrid",
        "Datagrid",
        "Datatable",
        "module",
        "zf2",
        "Zend Framework"
    ],
    
    "authors": [{
        "name": "Martin Keckeis",
        "email": "martin.keckeis1@gmail.com"
    }],
    
    "minimum-stability": "dev",
    
    "config": {
    	"process-timeout": 5000
    },

    "require": {
        "php": ">=5.3.23",
        
        "zendframework/zend-mvc": "~2.2",
        "zendframework/zend-modulemanager": "~2.2",
        "zendframework/zend-session": "~2.2",
        "zendframework/zend-view": "~2.2",
        "zendframework/zend-http": "~2.2",
        "zendframework/zend-paginator": "~2.2",
        "zendframework/zend-cache": "~2.2"
    },
    
    "require-dev": {
        "phpunit/PHPUnit": "~3.7",
        "satooshi/php-coveralls": "dev-master",
        "fabpot/php-cs-fixer": "*@dev",
        
        "zendframework/zendframework": "~2.2",
        "doctrine/doctrine-orm-module": ">=0.8"
    },
    
    "suggest" : {
        "ext-intl": "*",
        "doctrine/doctrine-orm-module": ">=0.8",
        "codeplex/phpexcel": "~1.7",
        "tecnick.com/tcpdf": "~6.0"
    },
    
    "autoload": {
        "psr-0": {
            "ZfcDatagrid\\": "src/",
            "ZfcDatagridTest\\": "tests/"
        }
    }
}
