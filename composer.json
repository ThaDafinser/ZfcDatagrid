{
    "name":        "thadafinser/zfc-datagrid",
    "description": "Zend Framework 2 Module that provides a datagrid for different datasources and output formats",
    "type":        "library",
    "license":     "MIT",
    "keywords": [
        "zfc-datagrid",
        "ZfcDatagrid",
        "Datagrid",
        "Datatable",
        "module",
        "zf2",
        "Zend Framework",
        "pdf",
        "excel",
        "jqgrid",
        "bootstrap",
        "Doctrine"
    ],
    
    "authors": [{
        "name": "Martin Keckeis",
        "email": "martin.keckeis1@gmail.com"
    }],

    "require": {
        "php": "~5.5|~7.0",
        
        "zendframework/zend-mvc": "~2.7",
        "zendframework/zend-modulemanager": "~2.5",
        "zendframework/zend-session": "~2.5",
        "zendframework/zend-view": "~2.5",
        "zendframework/zend-http": "~2.5",
        "zendframework/zend-paginator": "~2.5",
        "zendframework/zend-cache": "~2.5"
    },
    
    "require-dev": {
        "phpunit/PHPUnit": "~4|~5",
        "satooshi/php-coveralls": "~0.6",
        "fabpot/php-cs-fixer": "1.10.*",
        
        "doctrine/doctrine-orm-module": "~0.9",
        
        "zendframework/zend-console": "~2.5",
        "zendframework/zend-db": "~2.5",
        "zendframework/zend-i18n": "~2.5",
        "zendframework/zend-servicemanager": "~2.5",
        "zendframework/zend-text": "~2.5",
        "zendframework/zend-json": "~2.5"
    },
    
    "suggest" : {
        "ext-intl": "*",
        
        "doctrine/doctrine-orm-module": "~0.9",
        "phpoffice/phpexcel": "~1.7",
        "tecnick.com/tcpdf": "~6.0",

        "zendframework/zend-text": "~2.5",
        "zendframework/zend-json": "to support date ranges"
    },
    
    "autoload": {
        "psr-0": {
            "ZfcDatagrid\\": "src/",
            "ZfcDatagridTest\\": "tests/"
        }
    }
}
