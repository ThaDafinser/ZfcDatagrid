{
    "name":        "thadafinser/zfc-datagrid",
    "description": "Zend Framework 2 Module that provides a datagrid for different datasources and output formats",
    "type":        "library",
    "license":     "WTFPL",
    "keywords": [
        "ZfcDatagrid",
        "Datagrid",
        "Datatable",
        "module",
        "zf2",
        "Zend Framework"
    ],
    
    "authors": [{
        "name": "Martin Keckeis",
        "email": "martin.keckeis1@gmail.com"
    }],
    
    "minimum-stability": "dev",
    
    "config": {
    	"process-timeout": 5000
    },

    "require": {
        "ext-intl": "*",
        "php": ">=5.3.3",
        
        "zendframework/zend-mvc": ">=2.1",
        "zendframework/zend-modulemanager": ">=2.1",
        "zendframework/zend-session": ">=2.1",
        "zendframework/zend-view": ">=2.1",
        "zendframework/zend-http": ">=2.1",
        "zendframework/zend-paginator": ">=2.1",
        "zendframework/zend-cache": ">=2.1"
    },
    
    "require-dev": {
        "phpunit/PHPUnit": "3.7.*",
        "satooshi/php-coveralls": "dev-master",
        
        "zendframework/zendframework": ">=2.2",
        "doctrine/doctrine-orm-module": ">=0.8"
    },
    
    "suggest" : {
        "doctrine/doctrine-orm-module": ">=0.8",
        "codeplex/phpexcel": "~1.7",
        "tecnick.com/tcpdf": ">=6.0"
    },
    
    "autoload": {
        "psr-0": {
            "ZfcDatagrid\\": "src/",
            "ZfcDatagridTest\\": "tests/"
        }
    }
}
